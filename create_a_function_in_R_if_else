rm(list=ls())

log_and_add<-function(x,y){
  z<-log(x)+log(y)
  return(z)
}

log_and_add(2,3)


log_and_add(-2,3)

log_and_add_only_positive<-function(x,y){
  if(x>0 & y>0){
    z<-log(x)+log(y)
    return(z)
  }else{
    print("Negative numbers not allowed")
  }
}

log_and_add_only_positive(3,4)

log_and_add_only_positive(-2,3)
